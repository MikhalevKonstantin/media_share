<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ke.co.mediashare.mediashare" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ke.co.mediashare.mediashare.MainActivity" />
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_signin" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name=".DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ke.co.mediashare.mediashare.LoginActivity" />
        </activity>
        <activity
            android:name=".DiscoverBooksActivity"
            android:label="@string/title_activity_discover_books"
            android:parentActivityName=".DashboardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ke.co.mediashare.mediashare.DashboardActivity" />
        </activity>
        <activity
            android:name=".BestSellersActivity"
            android:label="@string/title_activity_best_sellers" >
        </activity>
        <activity
            android:name=".NewReleasesActivity"
            android:label="@string/title_activity_new_releases" >
        </activity>
        <activity
            android:name=".RecommendedBooksActivity"
            android:label="@string/title_activity_recommended_books" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".DashboardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ke.co.mediashare.mediashare.DashboardActivity" />
        </activity>
    </application>

</manifest>
