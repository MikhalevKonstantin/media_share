<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlActivated">@color/ControlActivatedColor</item>
        <item name="colorControlHighlight">@color/ControlHighlightedColor</item>
        <item name="colorControlNormal">@color/ControlNormalColor</item>
        <item name="editTextColor">@color/EditTextColor</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff6600</item>
        <item name="android:background">@drawable/button</item>
    </style>
</resources>
