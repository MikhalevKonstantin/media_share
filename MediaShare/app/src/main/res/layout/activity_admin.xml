<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_admin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideInset"
        android:scrollbarSize="2dp"
        tools:context="ke.co.mediashare.mediashare.AdminActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_book_name"
            android:text="@string/book_name"
            android:textColor="#ff6600"
            android:paddingLeft="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_book_name"
            android:theme="@style/EditTextStyle"
            android:ems="10"
            android:inputType="text"
            android:padding="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_book_price"
            android:text="@string/book_price"
            android:textColor="#ff6600"
            android:paddingLeft="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_book_price"
            android:theme="@style/EditTextStyle"
            android:ems="10"
            android:padding="20dp"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_book_author"
            android:text="@string/book_author"
            android:textColor="#ff6600"
            android:paddingLeft="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_book_author"
            android:theme="@style/EditTextStyle"
            android:ems="10"
            android:padding="20dp"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_book_chooser"
            android:text="@string/book_category"
            android:textColor="#ff6600"
            android:paddingLeft="10dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/books_chooser"
            android:theme="@style/SpinnerStyle"
            android:spinnerMode="dropdown"
            android:entries="@array/books_categories"
            android:padding="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_book_upload"
            android:text="@string/upload_book"
            android:textColor="#ffffff"
            android:background="@drawable/button_background"
            android:padding="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_book_thumbnail"
            android:text="@string/view_book_thumbnail"
            android:textColor="#ff6600"
            android:padding="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>